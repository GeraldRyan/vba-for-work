Option Explicit

Sub Macro1()
'
' Macro1 Macro
'
Application.ScreenUpdating = True

' declare variables
Dim mycount As Integer
mycount = 0
Dim i As Integer
Dim First As Range
Set First = Range("A2")
Dim LastCell As Range
Set LastCell = ActiveSheet.Cells.SpecialCells(xlCellTypeLastCell)

' delete easy first Rs and Cs
'Range("A1:A5").EntireRow.Delete
'Range("B:D,G:H").Delete

' prepare loops
Set LastCell = LastCell.End(xlToLeft)
Set LastCell = LastCell.End(xlToLeft)
Set LastCell = LastCell.End(xlToLeft)
Set First = Range("A2")
mycount = Range(First, LastCell).Cells.Count
First.Select
GoTo tempstart

For i = 1 To mycount

' get names aligned
If ActiveCell.Font.Bold = False And InStr(ActiveCell.Value, "(") <> 0 And ActiveCell.Offset(0, 1) = "" Then
           
    'code for string to cut and paste
    ActiveCell.Cut
    
    ' deal with special case in Practice Management report formatting.
    'TODO make sure this is completely general - i.e. covers all cases
    If InStr(ActiveCell.Offset(3, 0).Value, "Office ") <> 0 Then
        
        ActiveCell.Offset(1).Select
    Else
        ActiveCell.Offset(2).Select
    End If
Repeater:
        ActiveSheet.Paste
        If ActiveCell.Offset(1, 1) <> "" Then
            ActiveCell.Copy
            ActiveCell.Offset(1, 0).Select
            GoTo Repeater
    
        Else
        ' code to move to next
            ActiveCell.Offset(1, 0).Select
        End If
Else
ActiveCell.Offset(1, 0).Select
End If

Next i

tempstart:
'Do While First.Value <> Empty
'    If InStr(First.Value, "Total") = 0 Then
'        MsgBox (First.Address & " Is " & First)
'        Set First = First.Offset(1)
'        First.Select
'    Else

' Delete unwanted rows to create table for pivoting

' re-set loop

For i = 1 To mycount
    'delete blanks if both C1 and C2 are ""
    If (ActiveCell = "" And ActiveCell.Offset(0, 1) = "") Or (ActiveCell.Font.Bold = True And InStr(ActiveCell.Value, "Totals") = 0) Then
Again:
        ActiveCell.EntireRow.Delete
        If (ActiveCell = "" And ActiveCell.Offset(0, 1) = "") Or (ActiveCell.Font.Bold = True And InStr(ActiveCell.Value, "Totals") = 0) Then
            GoTo Again
        End If
    End If
    ActiveCell.Offset(1).Select
    
Next i

LastCell.Select


'Do While First.Value <> Empty
'    If First.Font.Bold Then
'        MsgBox ("Cell is bold")
'        Set First = First.Offset(1)
'        First.Select
'    Else
'        MsgBox ("Not Bold")
'        Set First = First.Offset(1)
'        First.Select
'    End If
'Loop

'
'
'Do While First.Value <> Empty
'    If InStr(First.Value, "Total") = 0 Then
'        MsgBox (First.Address & " Is " & First)
'        Set First = First.Offset(1)
'        First.Select
'    Else
'        MsgBox ("Total in it")
'        Set First = First.Offset(1)
'        First.Select
'    End If
'Loop


    
    'Selection.EntireRow.Delete
'    Range("B:D,G:H").Select
'    Range("G1").Activate
'    Selection.Delete Shift:=xlToLeft
'    Range("A1").Select
Application.ScreenUpdating = False

End Sub

 
